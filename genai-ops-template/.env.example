# ===== Provider config =====
LLM_PROVIDER=openai                 # openai | azure
OPENAI_API_KEY=sk-...
OPENAI_MODEL=gpt-4o-mini            # or gpt-4o, gpt-4.1-mini, etc.
OPENAI_EMBED_MODEL=text-embedding-3-small

# Azure OpenAI (if LLM_PROVIDER=azure)
AZURE_OPENAI_ENDPOINT=https://<your-endpoint>.openai.azure.com/
AZURE_OPENAI_API_KEY=...
AZURE_OPENAI_CHAT_DEPLOYMENT=<your-deployment-name>
AZURE_OPENAI_EMBED_DEPLOYMENT=<your-embed-deployment-name>

# ===== Service =====
PORT=8000
PROMETHEUS_ENABLED=true
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318
OTEL_SERVICE_NAME=genai-ops-api

# ===== RAG =====
VECTOR_STORE_PATH=data/index/faiss_index
DOCS_PATH=data/docs
